<manifest package="eu.sirkel.chessclock"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Chess Clock"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChessClock">

        <!-- Declare ClockActivity -->
        <activity
            android:name="eu.sirkel.chessclock.ClockActivity"
            android:exported="false" />

        <!-- Your launcher activity -->
        <activity
            android:name="eu.sirkel.chessclock.MainActivity"
            android:theme="@style/Theme.ChessClock.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
